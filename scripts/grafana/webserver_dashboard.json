{
    "dashboard": {
      "id": null,
      "title": "Web Server Metrics",
      "tags": [],
      "timezone": "browser",
      "schemaVersion": 16,
      "version": 0,
      "refresh": "5s",
      "panels": [
        {
          "type": "graph",
          "title": "CPU Usage",
          "targets": [
            {
              "expr": "rate(node_cpu_seconds_total{mode=\"system\"}[1m])",
              "interval": "",
              "legendFormat": "{{cpu}}",
              "refId": "A"
            }
          ],
          "xaxis": {
            "show": true,
            "mode": "time"
          },
          "yaxis": {
            "show": true,
            "format": "short"
          }
        },
        {
          "type": "graph",
          "title": "Memory Usage",
          "targets": [
            {
              "expr": "node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes * 100",
              "interval": "",
              "legendFormat": "Memory Usage",
              "refId": "B"
            }
          ],
          "xaxis": {
            "show": true,
            "mode": "time"
          },
          "yaxis": {
            "show": true,
            "format": "percent"
          }
        }
      ]
    },
    "overwrite": true
}
  